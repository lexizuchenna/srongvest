<header class="header" data-header>
  <div class="container">
    <h1>
      <a href="#" class="logo">SrongVest</a>
    </h1>
    <button
      class="menu-toggle-btn icon-box"
      data-menu-toggle-btn
      aria-label="Toggle Menu"
    >
      <span class="material-symbols-rounded icon">menu</span>
    </button>

    <nav class="navbar">
      <div class="container">
        <ul class="navbar-list">
          <li>
            <a href="/users/dashboard" class="navbar-link icon-box">
              <span class="material-symbols-rounded icon">home</span>

              <span>Home</span>
            </a>
          </li>
          <li>
            <a href="/users/fund" class="navbar-link icon-box">
              <span class="material-symbols-rounded icon">add_card</span>

              <span>Fund</span>
            </a>
          </li>
          <li>
            <a href="/users/withdraw" class="navbar-link icon-box">
              <span class="material-symbols-rounded icon">account_balance</span>

              <span>Withdraw</span>
            </a>
          </li>
          <li>
            <a href="/users/referral" class="navbar-link active icon-box">
              <span class="material-symbols-rounded icon">group</span>

              <span>Referral</span>
            </a>
          </li>
          <li>
            <a href="/users/profile" class="navbar-link icon-box">
              <span class="material-symbols-rounded icon">person</span>

              <span>Profile</span>
            </a>
          </li>

          <li>
            <a href="/users/setting" class="navbar-link icon-box">
              <span class="material-symbols-rounded icon">settings</span>

              <span>Settings</span>
            </a>
          </li>

        </ul>

        <ul class="user-action-list">

          <li>
            <a href="#" class="header-profile">
              <div>
                <p class="profile-title">Alexander</p>
              </div>
            </a>
          </li>
          <li>
            <a href="/users/logout" class="header-profile">
              <div>
                <p class="profile-title">logout</p>
              </div>
            </a>
          </li>

        </ul>

      </div>
    </nav>

  </div>
</header>

<main>
  <article class="container article">
    <section class="projects">
      <div class="section-title-wrapper">
        <h2 class="section-title">Referrals</h2>
      </div>
      <ul class="project-list">
        {{#if referral}}
          {{#each referral}}
            <li class="project-item">
              <div class="card project-card">
                <h3 class="card-title">
                  <a> {{refName}} </a>
                </h3>
                <div class="card-badge" id="badge" value={{status}}>
                  {{status}}
                </div>
                <div class="card-progress-box">
                  <div class="progress-label">
                    <span class="progress-title">Amount Received</span>
                    <data class="progress-data" value="75">$
                      {{amtReceived}}
                    </data>
                  </div>
                </div>
              </div>
            </li>
          {{/each}}
        {{else}}
          <h2>You have no referrals</h2>
        {{/if}}
      </ul>
    </section>
  </article>
</main>
<script src="/js/ref.js"></script>